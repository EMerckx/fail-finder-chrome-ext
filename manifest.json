{
    "manifest_version": 2,

    "name": "fail-finder",
    "description": "This extension will check the web page for failures and errors",
    "version": "1.1",

    "background" : {
        "scripts": [
            "js/background.js"
        ]
    },

    "browser_action": {
        "default_icon": "img/icon.png"
    },

    "permissions": [
        "activeTab"
    ]
}